            each d in drivers
              if x%2 != 0
                | [&nbsp;&nbsp;&nbsp;] #{d.fullname}&nbsp;&nbsp;&nbsp;
              else
                | [&nbsp;&nbsp;&nbsp;] #{d.fullname}
              if x%2 == 0
                br
              - x++
