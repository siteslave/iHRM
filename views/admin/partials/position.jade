md-toolbar.md-whiteframe-z2
  div.md-toolbar-tools
    i.material-icons shopping_cart
    h2
      | &nbsp; ตำแหน่ง

md-progress-linear(md-mode="indeterminate", ng-show="showLoading")
md-card
  //- md-card-title รายการงบประมาณที่ใช้
  md-card-content
    //- span.md-headline รายการงบประมาณที่ใช้


    md-button.md-fab.md-fab-bottom-right(aria-label="Add", ng-click="addNew($event)")
      md-icon.material.icons add

    md-table-container
      table(md-table)
        thead(md-head)
          tr(md-row)
            th(md-column, md-numeric) #
            th(md-column) รายการ
            th(md-column)
        tbody(md-body)
          tr(md-row, ng-repeat="p in positions")
            td(md-cell) {{ $index + 1 }}
            td(md-cell) {{ p.name }}
            td(md-cell)
              md-button.md-icon-button(aria-label="More", ng-click="edit(p)")
                md-icon.material-icons create
              md-button.md-icon-button(aria-label="Remove", ng-click="remove(p)")
                md-icon.material-icons delete_sweep
