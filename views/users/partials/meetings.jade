md-progress-linear(md-mode="indeterminate", ng-show="showLoading")
md-card
  md-card-content
    span.md-headline การเข้าร่วมประชุม/อบรม

    md-button.md-fab.md-fab-bottom-right(aria-label="Add", ng-click="addNew($event)")
      md-icon.material.icons person_add

    div(layout="row", layout-fill)
      div(flex)
        md-input-container.md-block
          md-icon.material-icons search
          input(ng-model="searchQuery", placeholder="พิมพ์ หัวข้ออบรม/ประชุม แล้วกด ENTER...", ng-keypress="doSearch($event)")

    md-table-container
      table(md-table)
        thead(md-head)
          tr(md-row)
            th(md-column, md-numeric) #
            th(md-column) วันที่
            th(md-column) หัวข้ออบรม/กิจกรรม
            th(md-column) หน่วยงาน
            th(md-column) สถานที่
            th(md-column) คะแนน
            th(md-column)
        tbody(md-body)
          tr(md-row, ng-repeat="m in meetings")
            td(md-cell) {{ $index + 1 }}
            td(md-cell) {{ m.start_date }}
            td(md-cell) {{ m.meeting_title }}
            td(md-cell) {{ m.meeting_owner }}
            td(md-cell) {{ m.meeting_place }}
            td(md-cell) {{ m.score | number:2 }}
            td(md-cell)

              md-menu
                md-button(aria-label="More", ng-click="openMenu($mdOpenMenu, $event)").md-icon-button
                  md-icon.material-icons more_vert

                md-menu-content(width="4")
                  md-menu-item
                    md-button(ng-click="remove($event, m)")
                      md-icon.material-icons delete_sweep
                      | &nbsp; ลบรายการ
                  md-menu-item
                    md-button(ng-click="edit($event, m)")
                      md-icon.material-icons create
                      | &nbsp; แก้ไข/ดูข้อมูล

                  md-menu-divider
                  md-menu-item
                    md-button(ng-click="print($event, m)")
                      md-icon.material-icons print
                      | &nbsp; พิมพ์




      md-table-pagination(md-limit="query.limit", md-page="query.page", md-total="{{ total }}",
        md-on-paginate="onPaginate",
        md-options="[5, 20, 30, 50]",
        md-label="{page: 'หน้า', rowsPerPage: 'เรคอร์ดต่อหน้า', of: 'จาก'}"
        md-page-select, ng-if="showPaging")
